<?xml version="1.0"?>
<experiment>
  <ue name="ue0" positions_file="example/ue1_positions.csv">
    <ue_app name="firefox_browser" image="firefox" command="--class=firefox-docker http://172.21.0.1:8080/">
      <volume>ue0:/output</volume>
      <volume>/tmp/.X11-unix:/tmp/.X11-unix</volume>
      <volume>/dev/shm:/dev/shm</volume>
      <volume>/run/user/1000/pulse:/run/user/1000/pulse</volume>
      <device>/dev/dri</device>
      <environment>DISPLAY=:0</environment>
      <environment>'PULSE_SERVER=unix:/run/user/1000/pulse/native'</environment>
    </ue_app>
  </ue>

  <mec_host name="mec0" memmory="1" cpu="2"/>

  <mec_app name="quakejs" image="treyyoder/quakejs" ip="172.21.0.2" host="mec0" command="">
    <environment>HTTP_PORT=8080</environment>
    <port>'80/tcp': 8080</port>
    <port>'27960/tcp': 27960</port>
  </mec_app>

  <link ue="ue0" mec_host="mec0" latency="0" upload="5000" download="100Mbps" time="00"/>
  <link ue="ue0" mec_host="mec0" latency="20" upload="5000" download="100Mbps" time="100"/>
  <link ue="ue0" mec_host="mec0" latency="40" upload="5000" download="100Mbps" time="200"/>
  <link ue="ue0" mec_host="mec0" latency="60" upload="5000" download="100Mbps" time="300"/>
  <link ue="ue0" mec_host="mec0" latency="80" upload="5000" download="100Mbps" time="400"/>
  <link ue="ue0" mec_host="mec0" latency="100" upload="5000" download="100Mbps" time="500"/>
  <link ue="ue0" mec_host="mec0" latency="120" upload="5000" download="100Mbps" time="600"/>
</experiment>
